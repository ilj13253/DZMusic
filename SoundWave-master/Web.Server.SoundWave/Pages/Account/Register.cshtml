@page
@model Web.Server.SoundWave.Pages.Account.RegisterModel
@{
}
@{
    ViewData["Title"] = "Sign up";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <p>
            <h4>Sign up for a new account</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="RegisterViewModel.EmailAddress" class="control-label"></label>
                        <input asp-for="RegisterViewModel.EmailAddress" class="form-control" />
                        <span asp-validation-for="RegisterViewModel.EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterViewModel.Password" class="control-label"></label>
                        <input asp-for="RegisterViewModel.Password" class="form-control" />
                        <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterViewModel.ConfirmPassword" class="control-label"></label>
                        <input asp-for="RegisterViewModel.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Sign up" />
                        <a class="btn btn-outline-secondary" asp-controller="Race" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
